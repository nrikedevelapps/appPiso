<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Colores"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp">

            <at.markushi.ui.CircleButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cb_color="@color/colorPrimary_red"
                app:cb_pressedRingWidth="8dip"
                android:id="@+id/color_red" />

            <at.markushi.ui.CircleButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cb_color="@color/colorPrimary"
                app:cb_pressedRingWidth="8dip"
                android:id="@+id/color_blue"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/color_yellow"
                android:layout_toEndOf="@+id/color_yellow" />

            <at.markushi.ui.CircleButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cb_color="@color/colorPrimary_yellow"
                app:cb_pressedRingWidth="8dip"
                android:id="@+id/color_yellow"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/color_red"
                android:layout_toEndOf="@+id/color_red" />

            <at.markushi.ui.CircleButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cb_color="@color/colorPrimary_violet"
                app:cb_pressedRingWidth="8dip"
                android:id="@+id/color_violet"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/color_blue"
                android:layout_toEndOf="@+id/color_blue" />






        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>