<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/row_user_shape_1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:elevation="6dp"
                android:layout_margin="3dp"
                android:background="@drawable/row_user_shape_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Name"
                    android:id="@+id/lbusername"
                    android:textStyle="bold"
                    android:layout_marginLeft="27dp"
                    android:layout_marginStart="27dp"
                    android:layout_above="@+id/lbtotaluser"
                    android:layout_toRightOf="@+id/relativeLayout3"
                    android:layout_toEndOf="@+id/relativeLayout3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="totalProducts"
                    android:id="@+id/lbtotaluser"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/lbusername"
                    android:layout_alignStart="@+id/lbusername" />

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/relativeLayout3"
                    android:background="@drawable/degradate_user">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/imguser"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>