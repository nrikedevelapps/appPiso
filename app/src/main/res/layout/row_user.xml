<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:elevation="6dp"
                android:layout_margin="2dp"
                android:background="@color/colorPrimarySemiTransparent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Name"
                    android:id="@+id/lbusername"
                    android:textStyle="bold"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_alignTop="@+id/relativeLayout3"
                    android:layout_toRightOf="@+id/relativeLayout3"
                    android:layout_toEndOf="@+id/relativeLayout3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="totalProducts"
                    android:id="@+id/lbtotaluser"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="22dp"
                    android:layout_marginEnd="22dp" />

                <RelativeLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="#c2000000"
                    android:id="@+id/relativeLayout3"
                    android:gravity="center|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/imguser"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/prueba"
                        android:scaleType="centerCrop"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>